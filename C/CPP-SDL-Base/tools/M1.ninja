rule CC
    command = g++ ${in} -c -o ${out} -I./build/m1/include ${INCLUDES} ${flags}
    description = compiling

rule LINK
    command = g++ ${in} ${flags} ${INCLUDES} -I./build/m1/include -L/Users/mali/homebrew/lib ${libs} -o ${out}
    description = linking 
    
rule AR
    command = ar -rc ${out} ${in}
    description = Linking again

OUT = build/m1/_game.out
OBJ_PATH = build/m1/obj/

