rule CC
    command = gcc ${in} -c -o ${out} ${INCLUDES} ${flags} -D${TERM_TYPE}
    description = compiling

rule LINK
    command = gcc ${in} ${flags} ${INCLUDES} -L/Users/mali/homebrew/lib ${libs} -o ${out}
    description = linking 
    
rule AR
    command = ar -rc ${out} ${in}
    description = Linking again

